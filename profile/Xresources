! Foundamental
XTerm.termName: xterm-256color
XTerm.ttyModes: erase ^?
!XTerm.vt100.metaSendsEscape: true  ! May break vim's meta mapping, and so long no program rely on ESC sequence
XTerm.vt100.backarrowKey: false
XTerm.vt100.locale: false
XTerm.vt100.utf8: true

! Fonts
XTerm.vt100.faceName: Monaco
